pipeline {
    agent any
    parameters {
        name: 'NAME'
    }
    stages {
        stage('start_1') {
            steps {
                sh 'apt install -y python3-pip'
                sh 'pip install -r requirements.txt'
                sh 'chmod u+x hello.py'
                sh 'touch result.txt'
                sh 'python3 hello.py --name "${NAME}" > result.txt'
            }
        }
        stage('start_2') {
            steps {
                archiveArtifacts artifacts: 'result.txt'
            }
        }
    }
}
